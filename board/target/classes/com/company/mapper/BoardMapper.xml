<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.company.mapper.BoardMapper">
<!-- 게시글 작성 -->
	<insert id="insert">
		<selectKey keyProperty="bno" order="BEFORE" resultType="int">
			select seq_board.nextval from dual
		</selectKey>
	insert into spring_board(bno,title,content,writer) 
	values(#{bno},#{title},#{content},#{writer})
	</insert>
	
<!-- 게시글 수정 -->
	<update id="update">
	update spring_board set title=#{title}, content=#{content},
	updatedate=sysdate where bno=#{bno}
	</update>
	
<!-- 게시글 삭제 -->
	<delete id="delete">
	delete from spring_board where bno=#{bno}
	</delete>
	
<!-- 게시글 개별 조회 -->
	<select id="read" resultType="com.company.domain.BoardVO">
	select * from spring_board where bno=#{bno}
	</select>
	
<!-- 게시글 전체조회 -->
	<select id="list" resultType="com.company.domain.BoardVO">
		<![CDATA[
	select *
	from(select /*+INDEX_DESC(spring_board pk_spring_board)*/
			rownum rn, bno, title, writer, regdate, updatedate
			from spring_board
			where 
			]]>
			
			<include refid="criteria"></include>
		<![CDATA[
			
			
			rownum <= (#{pageNum}*#{amount}))
	where rn>(#{pageNum}-1)*#{amount}
		]]>
	</select>
<!-- 전체 게시물 개수 -->
	<select id="totalCnt" resultType="int">
		select count(*) from spring_board where 
		<include refid="criteria"></include>
		bno>0
	</select>
	
<!-- 동적 SQL -->
	<sql id="criteria">
		<trim prefix="(" suffix=")AND" prefixOverrides="OR">
			<foreach collection="typeArr" item="type">
				<trim prefix="OR">
					<choose>
						<when test="type=='T'.toString()">
							title like '%'||#{keyword}||'%'
						</when>
						<when test="type=='C'.toString()">
							content like '%'||#{keyword}||'%'
						</when>
						<when test="type=='W'.toString()">
							writer like '%'||#{keyword}||'%'
						</when>
					</choose>
				</trim>
			</foreach>
		</trim>
	</sql>

</mapper>